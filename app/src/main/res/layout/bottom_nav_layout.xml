<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_movie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/i_movie"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/selector_movie" />

        <TextView
            android:id="@+id/t_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/i_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/selector_tv" />

        <TextView
            android:id="@+id/t_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电视剧"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_game"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/i_game"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/selector_game" />

        <TextView
            android:id="@+id/t_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综艺"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
